# Database
DATABASE_URL=postgresql://invitetree:devpassword@postgres:5432/invite_tree_db

# Redis
REDIS_URL=redis://redis:6379/0

# JWT
JWT_SECRET_KEY=your-secret-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Admin
INITIAL_ADMIN_EMAIL=admin@example.com
INITIAL_ADMIN_PASSWORD=changeme

# Celery
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# App
APP_NAME=InviteTreeAPI
APP_VERSION=1.0.0
DEBUG=True

# Invite Settings
DEFAULT_INVITE_QUOTA=5
INVITE_TOKEN_EXPIRY_HOURS=24

# Health Score Thresholds
HEALTH_SCORE_LOW_THRESHOLD=50.0
SUPPORTING_TRUNK_MIN_DAYS=90
SUPPORTING_TRUNK_MIN_HEALTH=75.0
SUPPORTING_TRUNK_MIN_DEPTH=3
SUPPORTING_TRUNK_MIN_SIZE=10

# Sentry (optional)
